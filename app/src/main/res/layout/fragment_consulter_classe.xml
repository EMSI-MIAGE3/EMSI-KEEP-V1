<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="84dp"
        android:text="Choisir une classe"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/annee"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/filiere"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/annee"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/classe"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/filiere"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/consulter_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_below="@+id/classe"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="111dp"
        android:background="@color/colorPrimary"
        android:text="Consulter"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>